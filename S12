//S12 (1б) Используя другой тип цикла, перебрать числа от 1 до 1000 с шагом 4. 
// Найти сумму всех чисел, которые делятся на 7 без остатка
#include <iostream>
#include <clocale> 
using namespace std;
//Для выполнения задания S12  с использованием другого типа цикла, 
// отличного от цикла for, можно воспользоваться циклом while. 
//Код с использованием цикла while:

int main() {
    setlocale(LC_ALL, "Russian"); // установка русского 
    int sum = 0;
    int i = 1;
    while (i <= 1000) {
        if (i % 7 == 0) {
            sum += i;
        }
        i += 4;
    }
    cout << "Сумма чисел, которые делятся на 7 без остатка: " << sum << endl;
    return 0;
}
//В этом коде используется цикл для перебора чисел от 1 до 1000 с шагом 4. 
// Если текущее число рассчитывается на 7 без остатка, его затем добавляют в переменную 
