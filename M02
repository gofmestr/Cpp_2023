//М02 (4б) Функция принимает два параметра: сторона А и число сторон N, 
// и должна вернуть площадь N-угольника со стороной А.

#include <iostream>
#include <math.h>
using namespace std;
double get_square(long double s, int n) {
	long double P, A, S;
	P = s * n;
	//найдем апофему 
	A = s / (2 * tan((static_cast<long double>(180) / n) * (3.141592 / 180)));
	//найдем конечный результат
	S = (P * A) / 2;
	return S;
}

int main() {
	setlocale(LC_ALL, "Russian");
	cout << "Добро пожаловать, Дорогой Друг!!! Давай Рассчитаем площадь многоугольника!!!\n";
	cout << "Здесь вы сможете рассчитать площадь любого многоугольника с любым количеством сторон \n";

	long double s, n, S;
	cout << "Введите длинну стороны многоугольника: ";
	cin >> s;
	if (s <= 0) {
		cout << "Длинна стороны многоугольника не может быть отрицательной или равной 0, попробуйте еще раз! \n";
		return 0;
	}
	cout << "Введите необходимое количество сторон: ";
	cin >> n;
	if (n <= 2) {
		cout << "Количество сторон многоугольника не может быть ниже 2, попробуйте еще раз! \n";
		return 0;
	}
	S = get_square(s, n);
	cout << "Площадь многоугольника: " << S;
}
