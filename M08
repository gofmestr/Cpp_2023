//M08 (4б) Функция get_angle() принимает три числа - длины трех сторон треугольника и возвращает значение 
// угла (в градусах), расположенного напротив первой стороны. Разрешено использовать обратные 
// тригонометрические функции из библиотеки math.h. Введите проверку на корректность значений аргументов (>0).
#include <iostream>
#include <math.h>
using namespace std;
// Рассчет угла получившегося треугольника.
long double get_angle(long double a,long double b, long double c) {
    long double ga;
    ga = acos((pow(b, 2) + pow(c, 2) - pow(a, 2)) / (2 * b * c));
    ga = ga * (180 / 3.141592);
    return ga;
}

int main() {
    setlocale(LC_ALL, "Russian");
    // контакт с пользователем, дальше просим ввести хотя бы циферки пьессу не стоит писать
    long double x, a, b, c;
    cout << "Укажи длиннны сторон треугольника: A B C" << endl;
    cout << "Укажи длинну стороны А" << endl;
    cin >> a;
    cout << "Укажи длину стороны B" << endl;
    cin >> b;
    cout << "Укажи длинну стороны C" << endl;
    cin >> c;
    // Реализуем проверку адекватности вводных данных, так как если две стороны в сумме будут короче третьей, это треугольником не назовешь

    if (((b + c) > a) && ((a + c) > b) && ((a + b) > c)) {
        // Используем нашу функцию
        x = get_angle(a, b, c);
        cout << "Угол на против стороны А = " << x << endl;
    }
    else {
        // Выводим сообщение если треугольник таковым не является
        cout << "Данный треугольник не может существовать.";
    }

}
