#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "rus");
// Устнановили русский язык
	int	Z = 0;
	double X = 0;
	// Ввели переменные 'Z' и 'X', а также указали для 'X' тип данных 'double',
	//который хранит дробные числа с точностью до 15 знаков после запятой.
	char C = 0;
	// Переменная 'C' имеет: Символьный тип данных, который хранит один символ
	bool trueOrFalse = 0;
	// 'bool' может принимать только два значения 'true' или 'false'

	cout << "Введите целое число: ";
	cin >> Z;
	cout << "Введите вещественное число: ";
	cin >> X;
	cout << "Введите символ: ";
	cin >> C;
	// только числа 0 (интерпретируется как false) и 1 (true)
	cout << "Введите 0 или 1: ";
	cin >> trueOrFalse;

	cout << endl << endl;
	cout << "Целое число: " << Z << endl;
	cout << "Вещественное число: " << X << endl;
	cout << "Символ: " << C << endl;
	cout << "bool: " << trueOrFalse << endl;

	return 0;
}
