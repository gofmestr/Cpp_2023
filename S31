// S31 (1б) Создайте текстовый массив с названиями цифр от 0 до 9. 
// Пользователь вводит число и получает на экран его название.
#include <iostream>
#include <string>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");
    string digits[] = { "Нуль", "Еденица", "Два", "Три", "Четыре",
        "Пять", "Шесть", "Семь", "Восемь", "Девять" }; // массив имен цифр
    string user_input; // строка для ввода числа от пользователя

    cout << "Введите число от 0 до 9: ";
    cin >> user_input;

    if (stoi(user_input) >= 0 && stoi(user_input) <= 9) { // проверка того, что введено число от 0 до 9
        cout << "Вы ввели число: " << digits[stoi(user_input)] << endl; // вывод названия числа на экран
    }
    else {
        cout << "Введено некорректное число. Введите число от 0 до 9." << endl;
    }

    return 0;
}
